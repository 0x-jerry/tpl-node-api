{
  "name": "tpl-node-api",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch src/index.ts",
    "start": "node dist/index.js",
    "build": "npm run openapi && tsup",
    "db:migrate": "prisma migrate dev --name init",
    "db:generate": "prisma generate",
    "openapi": "tsx scripts/generateRoutesInfo.ts"
  },
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/routes/**/*.ts"
    ],
    "clean": true,
    "format": [
      "esm"
    ],
    "env": {
      "NODE_ENV": "production"
    },
    "treeshake": true
  },
  "dependencies": {
    "@hono/node-server": "^1.14.1",
    "@hono/swagger-ui": "^0.5.1",
    "@prisma/client": "6.7.0",
    "dotenv": "^16.5.0",
    "hono": "^4.7.9",
    "prisma": "^6.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.15.17",
    "openapi-ts-define": "^0.7.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}